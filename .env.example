# Binance API Configuration
# Note: API keys are optional for public WebSocket orderbook streams
# They are only needed for REST API calls or private streams
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Get chat ID from @userinfobot or @getidsbot on Telegram
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Imbalance Ratio Threshold
# Alert will be sent when |Imbalance Ratio| > this value
# Default: 0.5 (recommended range: 0.1 - 1.0)
IMBALANCE_THRESHOLD=0.5
